<div class="container" style="margin:50px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar la Novedad</h4>
            <form action="/admin/novedades/modificar" method="post">
                <input type="hidden" name="id" value="{{novedad.id}}">
                <div class="form-group">
                    <input type="text" placeholder="Titulo" value="{{novedad.titulo}}" class="form-control"
                        name="titulo">
                </div>
                <div class="form-group">
                    <textarea name="subtitulo" placeholder="Subtitulo" class="form-control">
                        {{novedad.subtitulo}}</textarea>
                </div>
                <div class="form-group">
                    <textarea name="novedad" placeholder="Novedad" class="form-control">
                        {{novedad.novedad}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
               {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>

</div>